<h2><%= @list.name %></h2>

<% @list.bookmarks.each do |bookmark| %>
  <h4><%= bookmark.movie.title %> Rating: <%= bookmark.movie.rating %></h4>
  <p><%= bookmark.movie.overview %></p>
  <p><%= bookmark.comment %></p>
  <%= link_to "Delete", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
<% end %>
<br>
<%= link_to "Create a bookmark",  new_list_bookmark_path(params[:id]) %>
<br>
<%= link_to "Go back to the lists", lists_path %>
